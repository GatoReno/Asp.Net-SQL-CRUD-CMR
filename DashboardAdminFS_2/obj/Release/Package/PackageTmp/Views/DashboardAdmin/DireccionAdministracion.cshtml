<script>


    function actualizarIMGcontact() {
        $('#actualizarIMGcontacto').addClass('hidden');
        $('#img_actual_contacto').html(' <label> Nueva imagen </label><input type="file" class="form-control" name="files" value="" placeholder="imagen" required /><br /><hr />');
    }

    function actualizarIMGcontact_2() {
        $('#actualizarIMGcontacto_2').addClass('hidden');
        $('#img_actual_contacto_2').html(' <label> Nueva imagen </label><input type="file" class="form-control" name="files" value="" placeholder="imagen" required /><br /><hr />');
    }

    $.ajax({
        url: "/dashboardadmin/GetContacto_Contacto",
        type: "GET",
        dataType: "json",
        success: function (response) {

            var rl = response.length;

            if (rl > 0) {
                let imgx = response[0].img;
                let oculto = response[0].oculto;

                if (oculto == "show") {
                    $('#ocult_actual_contacto').html('Estado actual : visible');
                } else {

                    $('#ocult_actual_contacto').html('Estado actual : escondido');
                }

                if (imgx == "sin imagen") {
                    $('#img_actual_contacto').html('' + imgx + '<br><hr/><br>')
                } else {

                    $('#img_actual_contacto').html('<img src="' + imgx +
                        '"  width="200" alt="Imagen de contacto" /><br/>');

                }

                $('#contacto_div').removeClass('hidden');
                $('#Contacto_div_form').addClass('hidden');


                $('#id_contacto').val(response[0].id);
                $('#id_contacto_update').val(response[0].id);
                $('#destino_contacto').val(response[0].destino);
                $('#head_actual_contacto').val(response[0].head);
                $('#th1_actual_contacto').val(response[0].th1);
                $('#th2_actual_contacto').val(response[0].th2);

                $('#ocult_actual_contacto').val(response[0].oculto);


                $('#direccion_actual_contacto').val(response[0].direccion);
                $('#telefono_actual_contacto').val(response[0].telefono);
                $('#email_actual_contacto').val(response[0].email);



            } else {
                $('#errorContacto').html('<h3>No hay informacion de contacto en este momento</h3><p>Bienvenido en esta seccion usted podra ver y modificar los anuncuios de contacto y bolsa de trabajo, elegir el destinatario , etc.</p>');
            }
            // document.getElementById('txtEditorEdit').innerHTML += `${response[0].texto}`
            //alert(response.length);

        },
        fail: function (jqXHR, textStatus, err) {
            //$('#myModalLabel').append(`error: - ${err}`);
            console.log(jqXHR);
            console.log(textStatus);
            console.log(err);

            alert(err);

        }
    });


    $.ajax({
        url: "/dashboardadmin/GetContacto_Bolsa",
        type: "GET",
        dataType: "json",
        success: function (response) {

            var rl = response.length;

            if (rl > 0) {
                $('#bolsa_div_form').addClass('hidden');

                let imgx = response[0].img;
                let oculto = response[0].oculto;

                if (oculto == "show") {
                    $('#ocult_actual_contacto_2').html('Estado actual : visible');
                } else {

                    $('#ocult_actual_contacto_2').html('Estado actual : escondido');
                }

                if (imgx == "sin imagen") {
                    $('#img_actual_contacto_2').html('' + imgx + '<br><hr/><br>')
                } else {

                    $('#img_actual_contacto_2').html('<img src="' + imgx +
                        '"  width="200" alt="Imagen de contacto" /><br/>');

                }

                $('#contacto_div_2').removeClass('hidden');
                $('#Contacto_div_form_2').addClass('hidden');


                $('#id_contacto_2').val(response[0].id);
                $('#id_contacto_update_2').val(response[0].id);
                $('#destino_contacto_2').val(response[0].destino);
                $('#head_actual_contacto_2').val(response[0].head);
                $('#th1_actual_contacto_2').val(response[0].th1);
                $('#th2_actual_contacto_2').val(response[0].th2);

                $('#ocult_actual_contacto_2').val(response[0].oculto);


                $('#direccion_actual_contacto_2').val(response[0].direccion);
                $('#telefono_actual_contacto_2').val(response[0].telefono);
                $('#email_actual_contacto_2').val(response[0].email);



            } else {
                $('#errorContacto_2').html('<h3>No hay informacion de contacto en este momento</h3><p>Bienvenido en esta seccion usted podra ver y modificar los anuncuios de contacto y bolsa de trabajo, elegir el destinatario , etc.</p>');
            }
            // document.getElementById('txtEditorEdit').innerHTML += `${response[0].texto}`
            //alert(response.length);

        },
        fail: function (jqXHR, textStatus, err) {
            //$('#myModalLabel').append(`error: - ${err}`);
            console.log(jqXHR);
            console.log(textStatus);
            console.log(err);

            alert(err);

        }
    });

</script>